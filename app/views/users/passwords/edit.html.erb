<div class="users_contents">
  <div class="users_content">

    <h2>パスワードの変更</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="field">
        <%= f.label :password, "新しいパスワード(6文字以上）" %>
        
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password" ,placeholder: "新しいパスワード（6文字以上）"%>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, "新しいパスワード(確認)" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password" ,placeholder: "確認"%>
      </div>

      <div class="actions">
        <%= f.submit "パスワードを変更する" , class: 'btn'%>
      </div>
    <% end %>

    <%= render "users/shared/links" %>

  </div>
</div>
