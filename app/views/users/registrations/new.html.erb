
<div class="contents">
<div class="content">
<h2>アカウント登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder: "メールアドレス" %>
  </div>

  <div class="field password_field">
    <%= f.password_field :password, autocomplete: "new-password",placeholder: "パスワード（6文字以上）" %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password",placeholder: "パスワード確認" ,class: 'pw_conf'%>
  </div>

  <div class="actions">
    <%= f.submit "登録" , class: 'btn' %>
  </div>

<% end %>
<%= render "users/shared/links" %>
</div>
</div>
